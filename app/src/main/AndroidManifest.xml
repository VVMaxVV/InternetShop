<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.internetshop">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".presentation.InternetshopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InternetShop">
        <activity
            android:name=".presentation.activity.ProductsActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".presentation.activity.AuthenticationActivity"
            android:exported="true"
            android:label="@string/title_activity_authentication"
            android:theme="@style/Theme.InternetShop.NoActionBar">
        </activity>
        <activity
            android:name=".presentation.activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>