<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color">

    <data>

        <variable
            name="viewModel"
            type="com.example.internetshop.presentation.viewModel.BagViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/promo_code"
            style="@style/PromoCode"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="28dp"
            android:autofillHints="username"
            android:elevation="8dp"
            android:hint="@string/enter_your_promo_code"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/label_total_amount" />


        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_promo_code_button"
            android:elevation="8dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@id/promo_code"
            app:layout_constraintEnd_toEndOf="@id/promo_code"
            app:layout_constraintTop_toTopOf="@id/promo_code" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@id/promo_code"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_bag_product" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:text="@string/total_amount"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/button"
            app:layout_constraintStart_toStartOf="@id/button" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/price(viewModel.totalPrice)}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/label_total_amount"
            app:layout_constraintEnd_toEndOf="@id/button"
            app:layout_constraintTop_toTopOf="@+id/label_total_amount"
            tools:text="228$" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            style="@style/MainButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="22dp"
            android:text="@string/check_out"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>