<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProductHeader">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_headers_text_size</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_custom</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
        <item name="android:stepSize">0.01</item>
    </style>

    <style name="ProductHider.Italic" parent="ProductHeader">
        <item name="android:fontStyle">italic</item>
    </style>

    <style name="MainButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/red_rectangle_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SocialAccountButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/social_account_shape</item>
    </style>

    <style name="ExpandedToolBar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">@dimen/dimen_expanded_tool_bar_text_size</item>
        <item name="fontFamily">@font/metropolis_bold</item>
    </style>
    
    <style name="CollapsingToolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/dimen_collapsing_tool_bar_text_size</item>
        <item name="fontFamily">@font/metropolis_regular</item>
    </style>
</resources>